#!/bin/bash

# Downloads all interesting radio programs from radio Kossuth on the given
# week.

function print_help
{
cat <<EOF
NAME
    MrWeekly
USAGE
    MrWeekly <week>
DESCRIPTION
    Downloads all interesting radio programs from radio Kossuth on the given
    week.
OPTIONS
    -h, --help  
        This help
EXAMPLE
    MrWeekly 43 # download radio programs for week 43
AUTHOR
    Csaba Hoch <csaba.hoch@gmail.com>
EOF
}

KABARE_DIR="$Rk"

case "$1" in
    ''|-h|--help)
        print_help
        exit
        ;;
esac

set -x
PodcastGetter "G7 $1" "$1"6/14/35-
PodcastGetter "IK $1" "$1"6/16/04-
PodcastGetter "RV $1" "$1"6/18/04-30
PodcastGetter "TV $1" "$1"7/08/30-
cd "$KABARE_DIR"
PodcastGetter ":kabare_$1" "$1"6/13/05- 
PodcastGetter ":matine_$1" "$1"7/09/05-
